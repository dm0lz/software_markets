<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">fetcher.ovh Blog</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">Insights about scraping and data analysis.</p>
      
      <div class="mt-10 space-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16">
        <% @posts.each do |post| %>
          <article class="flex max-w-xl flex-col items-start">
            <div class="flex items-center gap-x-4 text-xs">
              <time datetime="<%= post.created_at.strftime("%Y-%m-%d") %>" class="text-gray-500">
                <%= post.created_at.strftime("%B %-d, %Y") %>
              </time>
            </div>

            <div class="group relative">
              <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <%= link_to post.title, public_post_path(id: post.title.parameterize), class: "hover:underline" %>
              </h3>
              <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                <%= post.body %>
              </p>
            </div>
          </article>
        <% end %>
      </div>
      <% if @posts.empty? %>
        <div class="text-center py-12">
          <p class="text-gray-500">No posts available yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>